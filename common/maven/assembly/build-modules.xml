<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>build-modules</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includeSubModules>true</includeSubModules>
            <binaries>
                <outputDirectory>/modules/</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <outputFileNameMapping>${module.artifactId}_${module.version}.${module.extension}</outputFileNameMapping>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    <files>
        <file>
            <source>./scripts/run.cmd</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>./scripts/run.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>./scripts/pre-stop.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../buildInfo.info</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../data/keystore/keystore.jks</source>
            <outputDirectory>/data/keystore/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-rest/target/mockingbird-trigger-rest.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-soap-http/target/mockingbird-trigger-soap-http.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-http2/target/mockingbird-trigger-http2.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-jms/target/mockingbird-trigger-jms.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-kafka/target/mockingbird-trigger-kafka.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-cli/target/mockingbird-trigger-cli.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-file/target/mockingbird-trigger-file.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-snmp/target/mockingbird-trigger-snmp.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
        <file>
            <source>../mockingbird-triggers-camel/mockingbird-trigger-smpp/target/mockingbird-trigger-smpp.jar</source>
            <outputDirectory>/triggers/</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>/maven/</exclude>
                <exclude>/target/</exclude>
                <exclude>*.iml</exclude>
                <exclude>pom.xml</exclude>
                <exclude>/applications/</exclude>
                <exclude>/documentation/</exclude>
                <exclude>/install/</exclude>
                <exclude>/scm/</exclude>
                <exclude>/scripts/</exclude>
                <exclude>/settings/</exclude>
                <exclude>/broker/lib/web/</exclude>
                <exclude>/trigger-jms-lib/</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>../mockingbird-aggregator/target/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-aggregator/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-communication/target/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-communication/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>

        <!--TODO create another build phase for converter in different build.xml -->
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-camel-common/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-rest/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-soap-http/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-http2/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-jms/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../common/trigger-jms-lib</directory>
            <outputDirectory>/triggers/lib/mockingbird-trigger-jms/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-kafka/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-cli/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-file/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-snmp/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../mockingbird-triggers-camel/mockingbird-trigger-smpp/target/lib</directory>
            <outputDirectory>/triggers/lib/</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
